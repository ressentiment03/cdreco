<%= render 'admin/homes/header' %>
<h2>ジャンル</h2>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>
  <%= f.submit '追加' %>
<% end %>

<table>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

