<%= render 'public/homes/header' %>
<% @sum = 0 %>
<div>
    <table>
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
                <td>
                    <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60 %>
                    <%= cart_item.item.name %>
                </td>
                <td>
                    <% tax = cart_item.item.price %>
                    <%= taxing_price = tax.round %>
                </td>
                <td>
                    <%= form_with model: cart_item, url: cart_item_path(cart_item), local:true do |f| %>
                      <%= f.select :amount, options_for_select((1..10).to_a, {selected: cart_item.amount.to_i}) %>個
                      <%= f.submit '変更' %>
                    <% end %>
                </td>
                <td><%= taxing_price*cart_item.amount %></td>
                <td><% @sum += taxing_price*cart_item.amount %></td>
                <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    
    <div>
        <%= link_to '買い物を続ける', root_path %>
        合計金額 ¥<%= @sum %>
    </div>
    
    <div>
        <div>
            <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか?" %>
            <%= link_to '情報入力に進む', root_path %>
        </div>
    </div>
</div>